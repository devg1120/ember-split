<a>DEMO #1</a>
<div style="height:400px; width:600px; margin 10px; border:2px solid #000000;">
<SplitView 
           @direction   ={{"vertical"}} 
           @gutterSize = {{4}} 
           @sizes      = {{array 25 25 50}} 
           @minSize    = {{array 20 20 20}}
           @class      = {{"full-height"}}
           >

  <div class="col1">col3</div>
  <div class="col2">col5</div>
  <div class="col3">col7</div>

</SplitView>
</div>


