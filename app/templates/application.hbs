<SplitView 
           @sizes     =  {{array 25 25 50}} 
           @minSize   =  {{array 20 20 20}}
           @gutterSize=  {{7}} 
           @class     =  {{"half-height"}}
           >

  <div class="col1">col1</div>
  <div class="col2">col2</div>
  <div class="col4">col4</div>

</SplitView>

<SplitView 
           @direction  ={{"vertical"}} 
           @gutterSize ={{7}} 
           @class      ={{"half-height"}}
           >

  <div class="col3">col3</div>
  <div class="col5">col5</div>

</SplitView>
